- for_context ||= context
- name ||= "#{for_context.resource.name}[#{field.name}]"
- id ||= "#{for_context.resource.name}_#{field.name}"
/- value ||= field.read(for_context.entity)
- value = 1
= field.method(:read)
- opts = { name: name, id: id, value: value }
input.form-control type="hidden" *opts
